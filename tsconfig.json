{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "drizzle/**/*.ts", "drizzle.config.ts"]
}
